@model WebApplication1.Models.FileMetadata

<h2>Информация о игре: @Model.FileName</h2>

<div>
    <p><strong>Описание:</strong> @Model.Description</p>
    <p><strong>Дата загрузки:</strong> @Model.DateUploaded.ToString("yyyy-MM-dd")</p>
    <p><strong>Загружено пользователем:</strong> @Model.UploadedBy</p>
    <p><strong>Команда:</strong> @Model.Team</p>
</div>

<!-- Кнопка для перехода к фильтрам -->
<a href="@Url.Action("Filters", "GameViewer", new { gameName = Model.FileName })">
    <button>Перейти к фильтрам</button>
</a>